{
  "name": "wsi-router",
  "version": "0.1.0",
  "description": "WhatsApp bot router for WooCommerce Shop Inventory plugin",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
