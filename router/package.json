  },
  "dependencies": {
    "better-sqlite3": "11.7.0",
    "dotenv": "16.4.7",
    "fastify": "5.2.1",
    "pino": "9.6.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.12",
    "@types/node": "22.10.7",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "2.1.8"
  }
}
